<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />

        <link rel="stylesheet" media="screen" href="../commons/bootstrap.css" />
        <link rel="stylesheet" media="screen" href="../commons/font-awesome.css" />
        <link rel="stylesheet" media="screen" href="../assets/ujm-exo.css" />

        <title>{{ _resource.resourceNode.name }}</title>

        <style type="text/css">
            body {
                padding-top: 0;
            }
        </style>
    </head>

    <body>
        {# Initialize AngularJS application #}
        <div data-ng-app="ExerciseApp" data-ng-cloak="">
            <exercise
                data-exercise="{{ exercise | json_encode | raw | escape }}"
                data-edit-enabled="false">
            </exercise>
        </div>

        <script src="../commons/jquery.min.js"></script>
        <script src="../commons/jquery-ui.min.js"></script>
        <script src="../commons/router.js"></script>
        <script src="../commons/routes.js"></script>
        <script src="../commons/translator.js"></script>

        {# Translations #}
        <script src="../translations/resource.js"></script>
        <script src="../translations/home.js"></script>
        <script src="../translations/platform.js"></script>
        <script src="../translations/error.js"></script>
        <script src="../translations/validators.js"></script>
        <script src="../translations/ujm_sequence.js"></script>
        <script src="../translations/ujm_exo.js"></script>

        {# Set some vars needed by Angular parts #}
        <script>
            {# Make Twig variables accessibles by AngularJS #}
            var AngularApp = {};

            AngularApp.webDir = "{{ path('claro_index') }}".split('/').slice(0, -2).join('/') + "/";
            AngularApp.locale = "{{ locale ~ '_' ~ locale|upper }}";
        </script>

        <script src="../assets/jsPlumb-2.1.3-min.js"></script>
        <script src="../assets/commons.js"></script>
        <script src="../assets/claroline-distribution-plugin-exo-app.js"></script>
    </body>
</html>
